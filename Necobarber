  <script>
    // Function to close the mobile menu when a menu item is clicked
    function closeMobileMenu() {
      var menuToggle = document.getElementById('menu-toggle');
      if (menuToggle.checked) {
        menuToggle.checked = false;
      }
    }

    // Attach click event listener to menu items
    var menuItems = document.querySelectorAll('.menu li a');
    for (var i = 0; i < menuItems.length; i++) {
      menuItems[i].addEventListener('click', closeMobileMenu);
    }

    // Attach click event listener to contact button
    var contactButton = document.querySelector('.menu span li a');
    contactButton.addEventListener('click', closeMobileMenu);
  </script>








  <!-- kontak kami -->

  <script>
    function showDialog() {
      var dialogOverlay = document.createElement('div');
      dialogOverlay.classList.add('dialog-overlay');

      var dialogBox = document.createElement('div');
      dialogBox.classList.add('dialog-box');
      dialogBox.innerHTML = '<h2>Kontak Kami</h2>' +
        '<form onsubmit="submitForm(event)">' +
        '<input type="text" class="form-input" style="margin-left: 10px; margin-right: 10px;" placeholder="Nama" required>' +
        '<input type="tel" class="form-input" style="margin-left: 10px; margin-right: 10px;" placeholder="Nomor Telepon" required>' +
        '<input type="text" class="form-input" style="margin-left: 10px; margin-right: 10px;" placeholder="Pesan (Opsional)">' +
        '<div class="dialog-buttons">' +
        '<button type="submit" class="dialog-button">Kirim</button>' +
        '<a href="#" class="dialog-button" onclick="closeDialog()">Tutup</a>' +
        '</div>' +
        '<p class="thank-you"></p>' +
        '<a href="https://api.whatsapp.com/send?phone=+6295364478093" target="_blank" class="whatsapp-icon"><i class="fab fa-whatsapp"></i></a>' +
        '</form>';

      dialogOverlay.appendChild(dialogBox);
      document.body.appendChild(dialogOverlay);

      // Menambahkan kelas 'show' untuk memunculkan dialog dengan transisi
      setTimeout(function () {
        dialogOverlay.classList.add('show');
      }, 10);
    }

    function closeDialog() {
      var dialogOverlay = document.querySelector('.dialog-overlay');
      dialogOverlay.classList.remove('show');

      // Menghapus dialog dari DOM setelah transisi selesai
      setTimeout(function () {
        document.body.removeChild(dialogOverlay);
      }, 300);
    }

    function submitForm(event) {
      event.preventDefault();

      // Mengambil nilai input dari form
      var nameInput = document.querySelector('.form-input:nth-of-type(1)');
      var phoneInput = document.querySelector('.form-input:nth-of-type(2)');
      var schoolInput = document.querySelector('.form-input:nth-of-type(3)');
      var thankYouElement = document.querySelector('.thank-you');

      // Menampilkan pesan terima kasih
      thankYouElement.textContent = 'Terima kasih atas pengiriman pesan!';

      // Menampilkan alert setelah tombol "Kirim" diklik
      setTimeout(function () {
        alert('Terimakasih, pesan anda telah dikirim!');
      }, 10);

      // Mengosongkan nilai input setelah pengiriman
      nameInput.value = '';
      phoneInput.value = '';
      schoolInput.value = '';

      // Menutup dialog setelah pengiriman
      setTimeout(function () {
        thankYouElement.textContent = '';
        closeDialog();
      }, 3000);
    }
  </script>




  <style>
    .dialog-overlay {
      display: flex;
      align-items: center;
      justify-content: center;
      position: fixed;
