  <script>
    window.addEventListener('scroll', function () {
      var navbar = document.querySelector('.top-nav');
      navbar.classList.toggle('scroll-fixed', window.scrollY > 0);
    });

    window.addEventListener('scroll', function () {
      var menu = document.querySelector('.menu a');
      menu.classList.toggle('scroll-fixed', window.scrollY > 0);
    });

    window.addEventListener('scroll', function () {
      var logo = document.querySelector('.logo');
      logo.classList.toggle('scroll-fixed', window.scrollY > 0);
    });

    window.addEventListener('scroll', function () {
      var menu = document.querySelector('.menu li .services');
      menu.classList.toggle('scroll-fixed', window.scrollY > 0);
    });



  </script>



  <script>
    function toggleSection(sectionId) {
      var sections = document.getElementsByTagName('section');
      for (var i = 0; i < sections.length; i++) {
        var section = sections[i];
        if (section.id === sectionId) {
          section.style.display = 'block';
        } else {
          section.style.display = 'none';
        }
      }
    }


  </script>


