      <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.7.1/leaflet.js"></script>
      <script>
        // Inisialisasi peta dengan koordinat yang diberikan dan zoom yang ditingkatkan
        var map = L.map('map').setView([-6.242698460916609, 106.83633257619692], 18);

        // Tambahkan layer peta dasar menggunakan Leaflet Provider Tiles
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors',
          maxZoom: 18,
        }).addTo(map);

        // Tambahkan marker pada lokasi yang diberikan
        var marker = L.marker([-6.242698460916609, 106.83633257619692]).addTo(map);

        // Tambahkan info popup pada marker
        marker.bindPopup("<b>Jl. Pancoran Barat XI No.1</b><br>Pancoran, Jakarta Selatan");

        // Tambahkan label pada marker
        marker.bindTooltip("Jl. Pancoran Barat XI No.1").openTooltip();
      </script>








